---
layout: layout-2-1-columns
---

<% content_for :breadcrumbs do %>
  <%= partial "partial-breadcrumbs-business" %>
<% end %>

<% content_for :column1 do %>

 <header class="page-header">
    <hgroup>
      <h1>Land parcels</h1>
    </hgroup>
  </header>

  <p>
    All land parcels must have 100% coverage before you can apply for schemes.
    To do this, select each parcel and complete any missing information.

  </p>

  <table class="parcels js-row-link">
    <thead>
      <tr>
        <th class="name">Land parcel name</th>
        <th class="id">ID</th>
        <th class="area">Area</th>
        <th class="coverage">Coverage</th>
      </tr>
    </thead>
    <tbody>

      <% data.business.parcels.each do |f| %>
      <% statusClass = (f.coverage == 100 ? "done" : "not-done") %>
      <tr class="<%= statusClass %>">
        <td class="name">
          <a href="/<%= f.id %>">
            <%= (f.name ? f.name : "Untitled") %>
          </a>
        </td>
        <td class="id"><%= f.id %></td>
        <td class="area"><%= f.area %>ha</td>
        <td class="coverage"><span class="tag"><%= f.coverage %>%</span></td>
      </tr>
      <% end %>

    </tbody>
  </table>

<% end %>

<% content_for :column2 do %>

  <div class="js-stick-at-top-when-scrolling">

    <%= partial "partial-map", :locals => { :map => 'business-1-checked'} %>

    <div class="font-xsmall">
      <h2 class="heading-small">Land details</h2>

      <ul>
        <li>Area: <%= data.business.area %>ha</li>
        <li>SBI: <%= data.business.sbi %></li>
      </ul>

      <ul>
        <li><a href="add-land">Add land</a></li>
        <li><a href="remove-land">Remove land</a></li>
      </ul>
    </div>

  </div>

<% end %>
