 <form class="form">

    <div class="form-group">
      <label class="form-label" for="custNo">Customer reference number
        <span class="form-hint">This is the 10 digit number emailed to you when you created your account</span>

      </label>
      <input type="text" class="form-control" id="custNo" name="custNo">
    </div>

    <div class="form-group">
      <label class="form-label" for="pass1">Password
      </label>
      <input type="text" class="form-control form-control-1-2" id="pass1" name="custNo">
    </div>

    <div class="form-group">
      <a href="/" class="button">Sign in</a>
    </div>


      <p><a href="#sign-in-help" class="js-toggle">Having trouble signing in?</a></p>

      <div id="sign-in-help" class="js-hidden panel-indent">
        <p>If you've lost your customer reference number, call 03000 200 301.</p>

        <p>If you've forgotten your password, you can <a href="forgot-password-1">create a new one</a>.</p>
      </div>

  </form>

<% end %>
