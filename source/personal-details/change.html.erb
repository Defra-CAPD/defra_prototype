---
layout: layout-2-1-columns
---


<% content_for :column1 do %>

  <header class="page-header no-breadcrumb">
    <hgroup>
      <h1>Edit your contact details</h1>
    </hgroup>
  </header>

    <h2 class="heading-medium">Name<h2>

    <div class="form-group">
      <label class="form-label" for="title">Title</label>
      <input type="text" class="form-control form-control-1-4" id="title" value="Mr">
    </div>
    <div class="form-group">
      <label class="form-label" for="first-name">First name</label>
      <input type="text" class="form-control" id="first-name" value="John">
    </div>
    <div class="form-group">
      <label class="form-label" for="middle-name">Middle name</label>
      <input type="text" class="form-control" id="middle-name">
    </div>
    <div class="form-group">
      <label class="form-label" for="last-name">Last name</label>
      <input type="text" class="form-control" id="last-name" value="Smith">
    </div>


   <fieldset>
        <legend class="heading-medium">
            Address
        </legend>

        <div id="manual-address">

          <div class="form-group-related">
            <label class="form-label" for="businessAddress1">House name or number</label>
            <input type="text" class="form-control form-control-1-2" id="businessAddress1" name="businessAddress1" value="5 Monument Way">
          </div>
          <div class="form-group-related">
            <label class="form-label visuallyhidden" for="businessAddress2">Street address line 2</label>
            <input type="text" class="form-control form-control-1-2" id="businessAddress2" name="businessAddress1">
          </div>
          <div class="form-group">
            <label class="form-label visuallyhidden" for="businessAddress3">Street address line 3</label>
            <input type="text" class="form-control form-control-1-2" id="businessAddress2" name="businessAddress1">
          </div>
          <div class="form-group">
            <label class="form-label" for="businessAddressTown">Town or city</label>
            <input type="text" class="form-control form-control-1-2" id="businessAddressTown" name="businessAddressTown" value="Bodmin">
          </div>
          <div class="form-group">
            <label class="form-label" for="businessAddressPostcode">Postcode</label>
            <input type="text" class="form-control form-control-1-4" id="businessAddressPostcode" name="businessAddressPostcode" value="PL31 1NZ">
            &nbsp;<a href="#find-results" class="js-toggle">Find address</a>
          </div>

          <div class="form-group js-hidden" id="find-results">
            <select>
              <option>Found 12 addresses</option>
              <option>1 Monument Way, Bodmin</option>
              <option>2 Monument Way, Bodmin</option>
              <option>3 Monument Way, Bodmin</option>
              <option>4 Monument Way, Bodmin</option>
              <option>5 Monument Way, Bodmin</option>
              <option>6 Monument Way, Bodmin</option>
              <option>7 Monument Way, Bodmin</option>
              <option>8 Monument Way, Bodmin</option>
              <option>9 Monument Way, Bodmin</option>
              <option>10 Monument Way, Bodmin</option>
              <option>11 Monument Way, Bodmin</option>
              <option>12 Monument Way, Bodmin</option>
            </select>
          </div>

          <div class="form-group">
            <label class="form-label" for="businessAddressCountry">Country</label>
            <input type="text" class="form-control form-control-1-2" id="businessAddressCountry" name="businessAddressCountry" value="United Kingdom">
          </div>

        </div>

    </fieldset>

    <fieldset>
        <legend class="heading-medium">
            Contact details
        </legend>

        <div class="form-group">
          <label class="form-label" for="email">Email</label>
          <input type="text" class="form-control form-control-1-2" id="email" name="email" value="jsmith@bodminagrltd.co.uk">
        </div>

        <p>Telephone (give at least one number)</p>

        <div class="form-group">
          <label class="form-label" for="landline">Landline</label>
          <input type="text" class="form-control form-control-1-4" id="landline" name="landline" value="0300 790 6802">
        </div>

        <div class="form-group">
          <label class="form-label" for="mobile">Mobile</label>
          <input type="text" class="form-control form-control-1-4" id="mobile" name="mobile" value="0300 123 0798">
        </div>

    </fieldset>


    <p><a class="button" href="/1st-time-business/">Save and continue</a></p>


<% end %>

