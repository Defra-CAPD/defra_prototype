---
layout: layout-1-1-columns
---

<% content_for :breadcrumbs do %>
  <%= partial "partial-breadcrumbs-parcel", :locals => { :parcel => parcel} %>
<% end %>

<% content_for :column1 do %>

  <header class="page-header">
    <hgroup>
      <h1>Remove feature</h1>
    </hgroup>
  </header>

  <p>Are you sure you want to remove the feature: <br>

    Unspecified arable land

    ?
  </p>

  <form class="form" id="land-use-form">

    <div class="form-group inline">
      <label for="delete-yes" class="block-label">
        <input type="radio" name="delete" id="delete-yes" value="yes" class="js-toggle">
        Yes
      </label>
      <label for="delete-no" class="block-label">
        <input type="radio" name="delete" id="delete-no" value="no" class="js-toggle">
        No
      </label>
    </div>

    <div class="form-group">
      <a href="add-feature-area" class="button">Continue</a>
    </div>
  </form>

<% end %>

<% content_for :column2 do %>

  <div class="map-wrapper">
    <div class="map">
      <%= partial "partial-map-controls" %>
      <img class="map-image" src="<%= asset_path(:png, "/assets/images/maps/parcel.png") %>">
    </div>
  </div>

<% end %>
