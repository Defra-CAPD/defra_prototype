---
title: Rural payments prototype
layout: layout_template_no_nav
---

<div class="inner-block">

  <%= partial "partial-breadcrumbs-business" %>

  <div class="group">

        <header class="page-header">
          <hgroup>
            <h1>Update business details for <br><%= data.business.name %></h1>
          </hgroup>
        </header>

        <form class="form">

          <fieldset>
              <legend class="heading-medium">
                  Business nane
              </legend>


              <div class="form-group">
                <label class="form-label visuallyhidden" for="businessName">Name of business</label>
                <input type="text" class="form-control form-control-1-2" id="businessAddressName" name="businessAddressName" value="Bodmin Agri Ltd.">
              </div>
            </fieldset>

          <fieldset>
              <legend class="heading-medium">
                  Address
              </legend>
              <p><a href="#find-postcode" class="js-toggle">Find a UK address</a></p>

              <div class="js-hidden panel-indent" id="find-postcode">
                <label class="form-label" for="businessAddressPostcode">Enter postcode</label>
                <input type="text" class="form-control form-control-1-8" id="businessAddressPostcode" name="businessAddressPostcode" value="">
                <a href="#find-results" class="js-toggle button">Find address</a>

                <div class="form-group js-hidden" id="find-results">
                  <select>
                    <option>Found 12 addresses</option>
                    <option>1 Monument Way, Bodmin</option>
                    <option>2 Monument Way, Bodmin</option>
                    <option>3 Monument Way, Bodmin</option>
                    <option>4 Monument Way, Bodmin</option>
                    <option>5 Monument Way, Bodmin</option>
                    <option>6 Monument Way, Bodmin</option>
                    <option>7 Monument Way, Bodmin</option>
                    <option>8 Monument Way, Bodmin</option>
                    <option>9 Monument Way, Bodmin</option>
                    <option>10 Monument Way, Bodmin</option>
                    <option>11 Monument Way, Bodmin</option>
                    <option>12 Monument Way, Bodmin</option>
                  </select>
                </div>

              </div>

              <div id="manual-address">

                <div class="form-group-related">
                  <label class="form-label" for="businessAddressStreet">Street address</label>
                  <textarea class="form-control" id="businessAddressStreet" name="businessAddressStreet" rows="3">
Monument Way
                  </textarea>
                </div>
                <div class="form-group">
                  <label class="form-label" for="businessAddressTown">Town or city</label>
                  <input type="text" class="form-control form-control-1-4" id="businessAddressTown" name="businessAddressTown" value="Bodmin">
                </div>
                <div class="form-group">
                  <label class="form-label" for="businessAddressPostcode">Postcode</label>
                  <input type="text" class="form-control form-control-1-8" id="businessAddressPostcode" name="businessAddressPostcode" value="PL31 1NZ">
                </div>

                <div class="form-group">
                  <label class="form-label" for="businessAddressCountry">Country</label>
                  <input type="text" class="form-control form-control-1-4" id="businessAddressCountry" name="businessAddressCountry" value="United Kingdom">
                </div>

              </div>

          </fieldset>

          <fieldset>
              <legend class="heading-medium">
                  Contact details
              </legend>

              <div class="form-group">
                <label class="form-label" for="email">Email</label>
                <input type="text" class="form-control form-control-1-2" id="email" name="email" value="info@bodminagrltd.co.uk">
              </div>

              <p>Telephone (give at least one number)</p>

              <div class="form-group">
                <label class="form-label" for="landline">Landline</label>
                <input type="text" class="form-control form-control-1-4" id="landline" name="landline" value="0300 790 6802">
              </div>

              <div class="form-group">
                <label class="form-label" for="mobile">Mobile</label>
                <input type="text" class="form-control form-control-1-4" id="mobile" name="mobile" value="0300 123 0798">
              </div>

          </fieldset>

          <fieldset>
              <legend class="heading-medium">
                  Reference numbers
              </legend>

              <div class="form-group">
                <label class="form-label" for="businessVAT">VAT registration number (if applicable)</label>
                <input type="text" class="form-control form-control-1-4" id="businessVAT" name="businessVAT" value="GB999 9999 73">
              </div>
          </fieldset>

          <p><a class="button" href="business-details-additional">Save and continue</a></p>

        </form>




  </div>
</div>

