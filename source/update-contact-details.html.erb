---
layout: layout-2-1-columns
---

<% content_for :breadcrumbs do %>
  <%= partial "partial-breadcrumbs" %>
<% end %>

<% content_for :column1 do %>

  <header class="page-header">
    <hgroup>
      <h1>Update your contact details</h1>
    </hgroup>
  </header>

  <h2 class="heading-medium">Address</h2>

  <div class="form-group-related">
    <label class="form-label" for="businessAddressStreet">Street address</label>
    <textarea class="form-control" id="businessAddressStreet" name="businessAddressStreet" rows="3">
Bodmin Agri Ltd.
Monument Way
    </textarea>
  </div>
  <div class="form-group">
    <label class="form-label" for="businessAddressTown">Town or city</label>
    <input type="text" class="form-control form-control-1-2" id="businessAddressTown" name="businessAddressTown" value="Bodmin">
  </div>
  <div class="form-group">
    <label class="form-label" for="businessAddressPostcode">Postcode</label>
    <input type="text" class="form-control form-control-1-4" id="businessAddressPostcode" name="businessAddressPostcode" value="PL31 1NZ">
  </div>
  <div class="form-group">
    <label class="form-label" for="businessAddressCountry">Country</label>
    <input type="text" class="form-control form-control-1-2" id="businessAddressCountry" name="businessAddressCountry" value="United Kingdom">
  </div>

  <h2 class="heading-medium">Email and telephone</h2>

  <div class="form-group">
    <label class="form-label" for="email">Email address</label>
    <input type="text" class="form-control form-control-1-2" id="email" name="email" value="info@bodminagrltd.co.uk">
  </div>

  <div class="form-group">
    <label class="form-label" for="landline">Landline</label>
    <input type="text" class="form-control form-control-1-2" id="landline" name="landline" value="0300 790 6802">
  </div>

  <div class="form-group">
    <label class="form-label" for="mobile">Mobile</label>
    <input type="text" class="form-control form-control-1-2" id="mobile" name="mobile" value="0300 123 0798">
  </div>

  <br>
  <p><a href="account" class="button">Save and return</a></p>
  <p><a href="account">Back</a></p>

<% end %>