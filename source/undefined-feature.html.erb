---
layout: layout-1-1-columns
---

<% content_for :breadcrumbs do %>
  <%= partial "partial-breadcrumbs-parcel", :locals => { :parcel => parcel} %>
<% end %>

<% content_for :column1 do %>

  <header class="page-header">
    <hgroup>
      <h1>Undefined feature</h1>
    </hgroup>
  </header>

    <div class="form-group">
      <p class="form-label-bold">Name
        <span class="form-hint">For example 'Pond', 'Tree' or 'Farmyard'</span>
      </p>
      <%= partial "partial-land-use-and-features-list" %>
    </div>

    <div class="form-group">
      <label class="form-label-bold">Size
        <span class="form-hint">For example '2ha', '10m<sup class="font-xsmall">2</sup>' or '7m x 8m'</span>
      </label>
      <input class="form-control form-control-1-4" type="text" value="2.1ha">
    </div>

    <div class="form-group">
      <h3 class="form-label-bold">Position</h3>
      <p class="form-hint">Drag the feature on the map to reposition it.</p>
    </div>

    <div class="form-group">
      <a href="/<%= parcel.id %>/" class="button">Save and continue</a>
      <p><a href="/<%= parcel.id %>/">Back</a></p>
    </div>


  </form>

<% end %>

<% content_for :column2 do %>

  <div class="map-wrapper">
    <div class="map">
      <%= partial "partial-map-controls" %>
      <img class="map-image" src="<%= asset_path(:png, "/assets/images/maps/feature-pond.png") %>">
    </div>
  </div>

<% end %>
