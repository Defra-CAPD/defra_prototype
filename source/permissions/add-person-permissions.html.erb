<% content_for :column1 do %>

  <header class="page-header">
    <hgroup>
      <h1>Give John Smith access to <br><%= data.business.name %></h1>
    </hgroup>
  </header>

  <h3 class="heading-medium">Permissions</h3>

  <p>What do you want to allow this person to do?</p>

  <form class="form">

    <div>
      <label for="add" class="form-label">
        <input type="checkbox" id="add" value="yes">
