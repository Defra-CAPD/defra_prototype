---
title: Welcome to Middleman
layout: layout_template_no_nav
---

<% parcel = data.business.parcels[0] %>

<div class="inner-block">

  <div class="back-link">
    <a href="04-hedges">Back</a>
  </div>

  <div class="group">
    <div class="words">
      <div class="inner-block">
        <header class="page-header">
          <hgroup>
            <h2 class="subtitle"><%= data.business.name %>: <%= parcel.name %></h2>
            <h1>Buildings and features</h1>
          </hgroup>
        </header>

        <p class="alert">There are <strong>2 unverified features</strong> on this land parcel. <br>Verify or delete them before adding any new features.</p>

        <table class="parcel-features">
          <thead>
            <tr class="visuallyhidden">
              <th class="feature-ref">Number</th>
              <th class="feature-name">Feature</th>
              <th class="feature-area">Value</th>
              <th class="feature-edit">Edit</th>
              <th class="feature-delete">Delete</th>
            </tr>
          </thead>
          <tbody>
            <tr>
              <td class="feature-ref">1.</td>
              <td class="feature-name">Unverified pond</td>
              <td class="feature-area">0.2ha</td>
              <td class="feature-edit"><a href="05.3-verify-feature">Verify</a></td>
              <td class="feature-delete"> <a href="05.4-delete-feature" title="Delete this feature">✕</a></td>
            </tr>
            <tr>
              <td class="feature-ref">2.</td>
              <td class="feature-name">Unverified feature</td>
              <td class="feature-area">0.1ha</td>
              <td class="feature-edit"><a href="05.3-verify-feature">Verify</a></td>
              <td class="feature-delete"> <a href="05.4-delete-feature" title="Delete this feature">✕</a></td>
            </tr>
            <tr>
              <td class="feature-ref">3.</td>
              <td class="feature-name">Building</td>
              <td class="feature-area">0.3ha</td>
              <td class="feature-edit"><a href="05.2-check-feature">Edit</a></td>
              <td class="feature-delete"> <a href="05.4-delete-feature" title="Delete this feature">✕</a></td>
            </tr>
          </tbody>
        </table>

        <form>

          <p><a href="05.1-add-feature">Add a new feature</a></p>


          <div class="form-group">
            <a href="05-buildings-and-features" class="button">Save</a>
          </div>
        </form>

      </div>
    </div>
    <%= partial "partial-parcel-map" %>
  </div>
</div>

