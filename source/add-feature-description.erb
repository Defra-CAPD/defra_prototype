---
layout: layout-2-1-columns
---

<% content_for :breadcrumbs do %>
  <%= partial "partial-breadcrumbs-parcel", :locals => { :parcel => parcel} %>
<% end %>

<% content_for :column1 do %>

  <header class="page-header">
    <hgroup>
      <h1>Add a feature</h1>
    </hgroup>
  </header>

  <h2 class="heading-medium">3. Feature description</h2>

  <p>
    Mark the features on the map. You can use the zoom or full-screen controls to help.
  </p>

  <form class="form" id="land-use-form">

    <div class="form-group">
      <a href="add-feature-date" class="button">Continue</a>
    </div>

  </form>

<% end %>

<% content_for :column2 do %>

  <div class="map-wrapper">
    <div class="map">
      <%= partial "partial-map-controls" %>
      <img class="map-image" src="<%= asset_path(:png, "/assets/images/maps/parcel.png") %>">
    </div>
  </div>

<% end %>
